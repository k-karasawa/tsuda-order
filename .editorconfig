# To use this config on you editor, follow the instructions at:
# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 8

[*.md]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.puml]
tab_width = 2

[*.{rb,erb,schema}]
indent_size = 2

[*.{css,scss}]
indent_size = 2

[*.json]
indent_size = 2

[*.{js,ts,tsx}]
indent_size = 2

[tailwind.config.js]
indent_size = 4
